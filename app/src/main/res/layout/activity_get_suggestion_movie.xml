<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView

        android:id="@+id/txt_getSuggestion_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Our Recommendation"
        android:textSize="30sp" />

    <TextView

        android:id="@+id/txt_getSuggestion_description_movie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="25sp" />

    <Button

        android:id="@+id/AcceptSuggestionMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="#ff5b22"
        android:text="Accept Suggestion"
        android:textColor="#FFFFFF" />

</LinearLayout>