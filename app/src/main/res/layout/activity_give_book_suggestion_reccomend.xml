<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="40dp"
            android:background="#ff5b22" />

        <TextView

            android:id="@+id/txt_giveSuggestionBook_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:selectAllOnFocus="false"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView

            android:id="@+id/txt_giveSuggestion_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Author"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView

            android:id="@+id/txt_giveSuggestion_description3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Description"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView

            android:id="@+id/txt_giveSuggestionBook_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button

            android:id="@+id/buttonRecommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:background="#ff5b22"
            android:text="Recommend"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</ScrollView>